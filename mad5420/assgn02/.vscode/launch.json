{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: cl.exe build and debug active file",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [ { "name": "config", "value": "Debug" } ],
            "console": "integratedTerminal",
            "preLaunchTask": "C/C++: cl.exe build active file",
            "logging": {
                "exceptions": true,
                "moduleLoad": true,
                "trace": true
            }
        }
    ]
}